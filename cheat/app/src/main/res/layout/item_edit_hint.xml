<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/primaryLightColor">

        <TextView
            android:id="@+id/tv_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Message 'soundso'"
            android:textColor="@color/primaryTextColor"
            android:layout_marginLeft="@dimen/margin_text_small"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_cancel_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_edit_btn"
            android:minWidth="@dimen/size_cancel_edit_btn"
            android:minHeight="@dimen/size_cancel_edit_btn"
            android:layout_marginEnd="@dimen/margin_field_small"
            android:layout_gravity="bottom"
            android:textColor="@color/primaryTextColor"
            android:background="@drawable/send_btn"
            android:text="X" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>